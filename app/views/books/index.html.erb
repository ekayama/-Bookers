<h1>Books</h1>

<% @books.each do |book| %>

  <p>title</p>
  <span><%= book.title %></span>

  <p>Body</p>
  <span><%= book.body %></span>
  
  <span><%= link_to "Show", book_path(book.id) %></span>
  <span><%= link_to "Edit", edit_book_path(book.id) %></span>
  <span><%= link_to "Destroy", books_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>
  

<% end %>