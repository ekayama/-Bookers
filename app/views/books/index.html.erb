
<h1 class="index-midasi">Books</h1>
<div class="index-table">
<table>
　<thead>
　    <tr>
　     <th class="title">title</th>
　     <th class="body">body</th>
　     <th colspan="3"></th>
　   </tr>
　</thead>
  <% @books.each do |book| %>
  <tbody>
    <div class="index">
    <tr>
        <td class="ndex-title"><%= book.title %></td>
        <td class="index-body"><%= book.body %></td>
        <td class="index-show"><%= link_to "Show", book_path(book.id) %></td>
        <td class="index-edit"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="index-destroy"><%= link_to "Destroy", books_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
     </tr>
     </div>
  </tbody>
  <% end %>
</table>
</div>


<div class="index-New_book">
<h1>New book</h1>

<%= form_with model: @book, url: '/books',method: :post do |f| %>
  <h4>Title</strong><h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  
  <%= f.submit 'Create Book' %>
</div>
<% end %>